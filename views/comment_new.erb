<div class="row">
  <div class="col-md-8 offset-md-2">
    <form method="post" action="/comment">
      <div class="form-group">
        <label for="name">Author Name:</label>
        <input type="text" class="form-control" name="name" placeholder="Input your comment name...">
      </div>
      <div class="form-group">
        <label for="content">Content:</label>
        <textarea rows="5" class="form-control" name="content" placeholder="Input your content..."></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
      <a class="btn btn-secondary" href="/comments">Cancel</a>
    </form>
  </div>
</div>