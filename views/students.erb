<div class="row">
	<div class="col-md-4 offset-md-4 text-center">
		<h1> Students </h1>
	</div>
</div>

<div class="row">
	<div class="col-md-8 offset-md-2">
		<table class="table">
			<thead class="thead-dark">
				<tr>
					<th>Student ID</th>
					<th>Name</th>
					<th>Email</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @students.each do |student| %>
					<tr>
						<td><%= student.student_id %></td>
						<td><%= student.first_name + " " + student.last_name %></td>
						<td><%= student.email %></td>
						<td><a class="btn btn-outline-dark" href="/student/<%= student.student_id %>">Details</a></td>
					</tr>
				<% end %> 
			</tbody>
		</table>
		<a class="btn btn-success" id="create-button" href="/student/-1/edit">Create</a>
	</div>
</div>
